<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <style name="HomeScreenTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>


    <style name="CircleShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CategoryCardViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">10dp</item>
        <item name="android:strokeWidth">0</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ToolbarProfileTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ToolbarSubTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="GameScreenRadioButtonStyle">
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:layout_margin" tools:targetApi="o">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
    </style>

    <style name="CustomEditText">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Material.Light.Dialog.NoMinWidth" parent="MaterialAlertDialog.Material3">
        <item name="android:windowMinWidthMinor">0dp</item>
        <item name="android:windowMinWidthMajor">0dp</item>
    </style>

</resources>